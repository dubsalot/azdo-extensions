{
    "compilerOptions": {
        "charset": "utf8",
        "experimentalDecorators": true,
        "module": "amd",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": true,
        "target": "es5",
        "rootDir": "src/",
        "outDir": "dist/",
        "jsx": "react",
        "lib": [
          "es5",
          "es6",
          "dom",
          "es2015.promise"
        ],
        "types": [
            "react",
            "node"
        ],
        "baseUrl": "./",
        "paths": {
            "@locatorpath": ["src/Services/Fakes/Locator"],    
            "@serviceinterfaces": ["src/Services/Interfaces/IServiceInterfaces"],
            "@components/*": ["src/components/*"]
        }
    }
}